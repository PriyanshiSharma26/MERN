<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Categories</title>
    <%- include('__bootstrap.ejs') %> <!-- Include Bootstrap CSS -->
    <style>
        /* Custom Styles */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            color: #333;
            font-size: 32px;
            padding: 30px 0;
            background-color: #007bff;
            color: white;
            margin: 0;
        }

        /* Table Styles */
        table {
            width: 80%;
            margin: 30px auto;
            border-collapse: collapse;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            background-color: #fff;
            border-radius: 8px;
            overflow: hidden;
        }

        th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #007bff;
            color: white;
            font-size: 18px;
        }

        td {
            font-size: 16px;
            color: #333;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        /* Action Buttons Styles */
        .action-buttons {
            display: flex;
            justify-content: space-around;
        }

        .btn {
            padding: 8px 15px;
            cursor: pointer;
            border: none;
            border-radius: 5px;
            font-weight: bold;
            color: white;
            font-size: 14px;
            transition: background-color 0.3s ease, transform 0.2s;
        }

        /* Edit Button */
        .edit-btn {
            background-color: #28a745;
        }

        .edit-btn:hover {
            background-color: #218838;
            transform: translateY(-2px);
        }

        /* Delete Button */
        .delete-btn {
            background-color: #dc3545;
        }

        .delete-btn:hover {
            background-color: #c82333;
            transform: translateY(-2px);
        }

        /* No Records Message */
        .no-records {
            text-align: center;
            color: #777;
            font-size: 18px;
            padding: 20px;
        }

        /* Responsive Styles */
        @media (max-width: 768px) {
            table {
                width: 95%;
            }

            th, td {
                font-size: 14px;
                padding: 10px;
            }

            .btn {
                font-size: 12px;
                padding: 6px 10px;
            }
        }

    </style>
</head>
<body>
    <!-- Include the navigation bar -->
    <%- include('__navbar.ejs') %> <!-- Navigation Bar -->

    <h1>Categories</h1>

    <!-- Table Display -->
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if (categories && categories.length > 0) { %>
                <% categories.forEach(category => { %>
                    <tr>
                        <td><%= category.id %></td>
                        <td><%= category.name %></td>


                       <td>
                        <div class="button-container">
                            <!-- Edit Button -->
                            <a href="/category/edit/<%= category.id %>">
                                <button class="edit-btn">Edit</button>
                            </a>
                            
                            <!-- Delete Button -->
                            <form action="/category/delete/<%= category.id %>" method="GET" style="display: inline;">
                                <button type="submit" class="delete-btn" onclick="return confirm('Are you sure you want to delete this product?')">Delete</button>
                            </form>
                        </div>
                    </td>
                       
                    </tr>


                    
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="3" class="no-records">No categories found</td>
                </tr>
            <% } %>
        </tbody>
    </table>
    </body>
    </html>

   